{
    "name": "route-checks",
    "description": "Check that the routes on a service have not changed, if they have commits a read me with the permisisons of that route on them",
    "private": true,
    "license": "MIT",
    "author": "Hive HR <engineering@hive.hr>",
    "main": "index.ts",
    "engines": {
        "node": "12"
    },
    "scripts": {
        "start": "node lib/index.js",
        "dev": "ts-node index.ts",
        "build": "tsc",
        "lint": "exit 0",
        "checkRoutes": "cp -r ${GITHUB_WORKSPACE}/routes verificationRoutes && yarn getRoutes 1> /dev/null && diff -q verificationRoutes routes",
        "getRoutes": "babel ${GITHUB_WORKSPACE}/packages/**/src/routes --extensions .ts"
    },
    "dependencies": {
        "@actions/core": "1.2.2",
        "@actions/github": "^2.1.1",
        "@babel/cli": "^7.8.4",
        "@babel/core": "^7.8.7",
        "@babel/plugin-transform-typescript": "^7.8.7",
        "@octokit/rest": "^17.1.0",
        "@types/walk": "^2.3.0",
        "handlebars": "^4.7.3",
        "typescript": "^3.8.3",
        "walk": "^2.3.14"
    },
    "devDependencies": {
        "@types/node": "^13.9.1",
        "ts-node": "^8.6.2"
    }
}
